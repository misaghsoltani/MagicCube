{
  "include": ["magiccube/*"],

  "exclude": ["**/__pycache__"],

  // "ignore": ["tests"],

  "defineConstant": {
    "DEBUG": true
  },

  //   "stubPath": "magiccube/stubs",

  "reportMissingImports": "error",
  "reportMissingTypeStubs": false,
  "typeCheckingMode": "basic",
  "reportDeprecated": "warning",
  "reportAssignmentType": "error",
  "reportUnusedVariable": "warning",
  "reportUnusedFunction": "warning",
  "reportAssertAlwaysTrue": "warning",
  "reportGeneralTypeIssues": "error",
  "reportImportCycles": "warning",
  "reportUnreachable": "warning",
  "reportRedeclaration": "error",
  "reportAttributeAccessIssue": "error",
  "reportInconsistentConstructor": "warning",
  "reportConstantRedefinition": "warning",
  "reportIndexIssue": "error",
  "reportMissingTypeArgument": "warning",
  "reportUndefinedVariable": "error",
  "reportUnusedImport": "warning",
  "enableReachabilityAnalysis": true,
  "deprecateTypingAliases": true,

  //   "pythonPlatform": "Linux",

  "executionEnvironments": [
    {
      "root": "magiccube",
      "pythonVersion": "3.10",
      //   "pythonPlatform": "Linux",
      "extraPaths": [
        "${workspaceFolder}/.pixi/envs/all/lib/python3.10/site-packages",
        "${workspaceFolder}/.pixi/envs/lib/python3.10/site-packages",
        "${workspaceFolder}/magiccube"
      ],
      "reportMissingImports": "error"
    },
    {
      "root": "magiccube",
      "pythonVersion": "3.11",
      //   "pythonPlatform": "Linux",
      "extraPaths": [
        "${workspaceFolder}/.pixi/envs/all/lib/python3.11/site-packages",
        "${workspaceFolder}/.pixi/envs/lib/python3.11/site-packages",
        "${workspaceFolder}/magiccube"
      ],
      "reportMissingImports": "error"
    },
    {
      "root": "magiccube",
      "pythonVersion": "3.12",
      //   "pythonPlatform": "Linux",
      "extraPaths": [
        "${workspaceFolder}/.pixi/envs/all/lib/python3.12/site-packages",
        "${workspaceFolder}/.pixi/envs/lib/python3.12/site-packages",
        "${workspaceFolder}/magiccube"
      ],
      "reportMissingImports": "error"
    },
    {
      "root": "magiccube",
      "pythonVersion": "3.13",
      //   "pythonPlatform": "Linux",
      "extraPaths": [
        "${workspaceFolder}/.pixi/envs/all/lib/python3.13/site-packages",
        "${workspaceFolder}/.pixi/envs/lib/python3.13/site-packages",
        "${workspaceFolder}/magiccube"
      ],
      "reportMissingImports": "error"
    }
  ]
}
